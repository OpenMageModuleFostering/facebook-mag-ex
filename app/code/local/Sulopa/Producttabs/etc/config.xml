<?xml version="1.0"?>
<config>
    <modules>
        <Sulopa_Producttabs>
            <version>0.1.0</version>
        </Sulopa_Producttabs>
    </modules>
    <frontend>
        <routers>
            <producttabs>
                <use>standard</use>
                <args>
                    <module>Sulopa_Producttabs</module>
                    <frontName>producttabs</frontName>
                </args>
            </producttabs>
        </routers>
        <layout>
            <updates>
                <producttabs>
                    <file>producttabs.xml</file>
                </producttabs>
            </updates>
        </layout>
    </frontend>
    <admin>
        <routers>
            <producttabs>
                <use>admin</use>
                <args>
                    <module>Sulopa_Producttabs</module>
                    <frontName>producttabs</frontName>
                </args>
            </producttabs>
            <adminhtml>
                <args>
                    <modules>
                        <productslide before="Mage_Adminhtml">Sulopa_Producttabs_Adminhtml</productslide>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
    <adminhtml>
        <acl>
            <resources>
                <all>
                    <title>Allow Everything</title>
                </all>
                <admin>
                    <children>
                        <Sulopa_Producttabs>
                            <title>Producttabs Module</title>
                            <sort_order>10</sort_order>
                        </Sulopa_Producttabs>
                    </children>
                </admin>
            </resources>
        </acl>
        <layout>
            <updates>
                <producttabs>
                    <file>producttabs.xml</file>
                </producttabs>
            </updates>
        </layout>
    </adminhtml>   
    <global>
        <models>
            <producttabs>
                <class>Sulopa_Producttabs_Model</class>
                <resourceModel>producttabs_resource</resourceModel>
            </producttabs>
            <producttabs_resource>
                <class>Sulopa_Producttabs_Model_Resource</class>
            </producttabs_resource>
        </models>
        <resources>
            <producttabs_setup>
                <setup>
                    <module>Sulopa_Producttabs</module>
                    <class>Mage_Catalog_Model_Resource_Eav_Mysql4_Setup</class>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </producttabs_setup>
            <producttabs_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </producttabs_write>
            <producttabs_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </producttabs_read>
        </resources>
        <blocks>
            <producttabs>
                <class>Sulopa_Producttabs_Block</class>
            </producttabs>
        </blocks>
        <helpers>
            <producttabs>
                <class>Sulopa_Producttabs_Helper</class>
            </producttabs>
        </helpers>
    </global>
    <default>
        <producttabs>
            <producttabs_config>
                <enabled>1</enabled>
                <jquery>1</jquery>
                <title>Product Tabs</title>
                <auto>0</auto>
                <speed>3000</speed>
                <minslides>3</minslides>
                <maxslides>5</maxslides>
                <sort_name>asc</sort_name>
                <slidewidth>270</slidewidth>
                <width_thumbnail>272</width_thumbnail>
                <height_thumbnail>272</height_thumbnail>				<width_large_thumbnail>569</width_large_thumbnail>                <height_large_thumbnail>569</height_large_thumbnail>
                <product_review>0</product_review>
            </producttabs_config>
            <featured_product>
                <title>Featured Products</title>
                <heading_block>Featured Products</heading_block>
                <enable_featuredproduct>1</enable_featuredproduct>
            </featured_product>
            <product_show>
                <product_type>featured,bestseller</product_type>
                <product_number>10</product_number>
				<product_action>compare,cart,wishlist</product_action>
            </product_show>
        </producttabs>
    </default>
</config>