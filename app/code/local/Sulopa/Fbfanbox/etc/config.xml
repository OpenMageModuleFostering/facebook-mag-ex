<?xml version="1.0"?>
<config>
	 <default>
		<fbfanbox>
			<general>
				<enable>1</enable>
                <fb_page_url><![CDATA[https://www.facebook.com/sulopastore]]></fb_page_url>
				<header>1</header>
				<box_width>292</box_width>
				<connection>10</connection>
			</general>
			
		</fbfanbox>
	</default>
    <modules>
        <Sulopa_Fbfanbox>
            <version>0.1.2</version>
        </Sulopa_Fbfanbox>
    </modules>
    <frontend>
        <routers>
            <fbfanbox>
                <use>standard</use>
                <args>
                    <module>Sulopa_Fbfanbox</module>
                    <frontName>fbfanbox</frontName>
                </args>
            </fbfanbox>
        </routers>
        <layout>
            <updates>
                <fbfanbox>
                    <file>fbfanbox.xml</file>
                </fbfanbox>
            </updates>
        </layout>
    </frontend>
    <admin>
        <routers>
			<fbfanbox>
				<use>admin</use>
				<args>
					<module>Sulopa_Fbfanbox</module>
					<frontName>fbfanbox</frontName>
				</args>
			</fbfanbox>
        </routers>
    </admin>
    <adminhtml>					
		<layout>
			<updates>
				<fbfanbox>
					<file>fbfanbox.xml</file>
				</fbfanbox>
			</updates>
		</layout>
    </adminhtml>   
    <global>
        <models>
            <fbfanbox>
                <class>Sulopa_Fbfanbox_Model</class>
                <resourceModel>fbfanbox_mysql4</resourceModel>
            </fbfanbox>
            <fbfanbox_mysql4>
                <class>Sulopa_Fbfanbox_Model_Mysql4</class>
                <entities>
                    <fbfanbox>
                        <table>fbfanbox</table>
                    </fbfanbox>
                </entities>
            </fbfanbox_mysql4>
        </models>
        <resources>
            <fbfanbox_setup>
                <setup>
                    <module>Sulopa_Fbfanbox</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </fbfanbox_setup>
            <fbfanbox_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </fbfanbox_write>
            <fbfanbox_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </fbfanbox_read>
        </resources>
        <blocks>
            <fbfanbox>
                <class>Sulopa_Fbfanbox_Block</class>
            </fbfanbox>
        </blocks>
        <helpers>
            <fbfanbox>
                <class>Sulopa_Fbfanbox_Helper</class>
            </fbfanbox>
        </helpers>
    </global>
</config>